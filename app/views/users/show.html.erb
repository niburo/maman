<%= render "shared/second-header"%>
<div class="user-main">
  <div class="profile">
    <div class="profile-title">プロフィール</div>
    <div class="profile-main">
      <div class="user-wrap">
         <%# 画像 %>
        <div class="profile-wrap">
          <div class="profile-key">ニックネーム：</div>
          <div class="profile-value">
            <%= @user.nickname %>
          </div>
        </div>
        <div class="profile-wrap">
          <div class="profile-key">メール：</div>
          <div class="profile-value">
            <%= @user.email %>
          </div>
        </div>
        <div class="profile-wrap">
          <div class="profile-key">お名前：</div>
          <div class="profile-value">
            <%= @user.last_name %><%= @user.first_name %>
          </div>
        </div>
        <div class="profile-wrap">
          <div class="profile-key">お名前カナ：</div>
          <div class="profile-value">
            <%= @user.last_name_kana %><%= @user.first_name_kana %>
          </div>
        </div>
        <div class="profile-wrap">
          <div class="profile-key">生年月日：</div>
          <div class="profile-value">
            <%= @user.birthday %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render "shared/footer" %>